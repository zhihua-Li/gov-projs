<?xml version="1.0" encoding="UTF-8" ?>

<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd">

<struts>

	<package name="lims-default" extends="struts-default">

		<result-types>
            <result-type name="json" class="org.apache.struts2.json.JSONResult"/>
        </result-types>

        <interceptors>
			<!--
	            <interceptor name="autowire"
					class="com.opensymphony.xwork2.spring.interceptor.ActionAutowiringInterceptor">
					<param name="autowireStrategy">
						@org.springframework.beans.factory.config.AutowireCapableBeanFactory@AutowireCapableBeanFactory.AUTOWIRE_BY_NAME
					</param>
				</interceptor>
			 -->

			<interceptor name="json" class="org.apache.struts2.json.JSONInterceptor"/>
            <interceptor name="jsonValidation" class="org.apache.struts2.json.JSONValidationInterceptor"/>
			<interceptor name="authorizationInterceptor" class="com.lims.interceptor.AuthorizationInterceptor" />

            <!-- Sample JSON validation stack -->
            <interceptor-stack name="jsonValidationWorkflowStack">
                <interceptor-ref name="basicStack"/>
                <interceptor-ref name="validation">
                    <param name="excludeMethods">input,back,cancel</param>
                </interceptor-ref>
                <interceptor-ref name="jsonValidation"/>
                <interceptor-ref name="workflow"/>
            </interceptor-stack>

			<interceptor-stack name="appDefault">
				<!-- <interceptor-ref name="autowire" /> -->
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="authorizationInterceptor" />
			</interceptor-stack>

		</interceptors>


		<!-- Default interceptor stack. -->
		<default-interceptor-ref name="appDefault" />

		<global-results>
            <result name="timeOut" type="dispatcher">/pages/timeOut.jsp</result>
			<result name="login">/pages/intoLogin.action</result>
		</global-results>

	</package>


</struts>
